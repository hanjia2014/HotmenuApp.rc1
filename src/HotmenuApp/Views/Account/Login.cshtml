@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@using Microsoft.AspNet.Identity;
@using HotmenuApp.Models;
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewBag.Title = "Login";
}

<div class="account-container">
    <div class="content clearfix">
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">

            <h1>Member Login</h1>
            <hr />
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

            <div class="login-fields">

                <p>Please provide your details</p>

                <div class="field">
                    <label asp-for="Email">Username</label>
                    <input asp-for="Email" type="text" id="email" name="email" value="" placeholder="Username" class="login username-field" />
                </div> <!-- /field -->

                <div class="field">
                    <label asp-for="Password">Password:</label>
                    <input asp-for="Password" type="password" id="password" name="password" value="" placeholder="Password" class="login password-field" />
                </div> <!-- /password -->

            </div> <!-- /login-fields -->

            <div class="login-actions">

                <span class="login-checkbox">
                    <input asp-for="RememberMe" id="RememberMe" />
                    @*<input id="RememberMe" value="" name="RememberMe" type="checkbox" class="field login-checkbox" tabindex="4" />*@
                    <label asp-for="RememberMe" class="choice"></label>
                </span>

                <button class="button btn btn-success btn-large" type="submit">Sign In</button>
            </div> <!-- .actions -->
        </form>

    </div> <!-- /content -->

</div>